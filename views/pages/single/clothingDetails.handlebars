<h1>Clothing Details</h1>
<a href="/clothes">Back</a>
<br>
<div class="form-div">
    <img id="placeholder-img" alt="Clothing Item" src="/uploads/{{clothingItem.image}}">
</div>
<div class="form-div">
    <dl>
        <dt>Clothing Name</dt>
        <dd>{{clothingItem.name}}</dd>
        <dt>Type</dt>
        <dd class="capitalize">{{clothingItem.type}}</dd>
        <dt>Size</dt>
        {{#if clothingItem.size}}
        <dd class="capitalize">{{clothingItem.size}}</dd>
        {{else}}
        <dd>N/A</dd>
        {{/if}}
        <dt>Colors/Patterns</dt>
        {{#if clothingItem.colors-patterns}}
        <dd>
            <ul>
                {{#each clothingItem.colors-patterns}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </dd>
        {{else}}
        <dd>N/A</dd>
        {{/if}}
        <dt>Seasons</dt>
        {{#if clothingItem.season}}
        <dd>
            <ul>
                {{#each clothingItem.season}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </dd>
        {{else}}
        <dd>N/A</dd>
        {{/if}}
        <dt>Styles</dt>
        {{#if clothingItem.style}}
        <dd>
            <ul>
                {{#each clothingItem.style}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </dd>
        {{else}}
        <dd>N/A</dd>
        {{/if}}
        <dt>Brand</dt>
        {{#if clothingItem.brand}}
        <dd class="capitalize">{{clothingItem.brand}}</dd>
        {{else}}
        <dd>N/A</dd>
        {{/if}}
    </dl>
</div>
